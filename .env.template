# IoTSentinel Environment Variables Template
# Copy this file to .env and fill in your actual values

# ============================================================================
# FLASK SECURITY (REQUIRED)
# ============================================================================
# IMPORTANT: Generate a secure random key for production!
# You can generate one with: python3 -c "import secrets; print(secrets.token_hex(32))"
FLASK_SECRET_KEY=your-secret-key-change-this-in-production-please-use-at-least-32-characters # pragma: allowlist secret

# ============================================================================
# ADMIN CREDENTIALS (REQUIRED)
# ============================================================================
# Default admin password for the dashboard
# CHANGE THIS IMMEDIATELY after first login!
IOTSENTINEL_ADMIN_PASSWORD=admin # pragma: allowlist secret

# ============================================================================
# EMAIL NOTIFICATIONS (OPTIONAL)
# ============================================================================
# Enable or disable email alerts
EMAIL_ENABLED=true

# SMTP server settings
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587

# Email account credentials
EMAIL_SMTP_USER=your-email@gmail.com
EMAIL_SMTP_PASSWORD=your-app-specific-password # pragma: allowlist secret

# Sender and recipient addresses
EMAIL_SENDER_EMAIL=your-email@gmail.com
EMAIL_RECIPIENT_EMAIL=your-email@gmail.com

# ============================================================================
# FIREWALL CONTROL (OPTIONAL)
# ============================================================================
# Enable or disable automatic device blocking
FIREWALL_ENABLED=false

# Router SSH access (required if FIREWALL_ENABLED=true)
FIREWALL_ROUTER_IP=192.168.1.1
FIREWALL_ROUTER_USER=root
FIREWALL_ROUTER_PRIVATE_KEY_PATH=/home/user/.ssh/id_rsa

# ============================================================================
# THREAT INTELLIGENCE (OPTIONAL)
# ============================================================================
# Enable threat intelligence lookups
THREAT_INTELLIGENCE_ENABLED=true

# AbuseIPDB API key (get free key at https://www.abuseipdb.com/)
THREAT_INTELLIGENCE_ABUSEIPDB_API_KEY=your-abuseipdb-api-key-here # pragma: allowlist secret

# Cache duration for threat intelligence results (in hours)
THREAT_INTELLIGENCE_CACHE_HOURS=24

# ============================================================================
# DEPLOYMENT NOTES
# ============================================================================
#
# 1. NEVER commit the actual .env file to version control
# 2. Always use strong, unique passwords in production
# 3. For Gmail: Use App Passwords, not your regular password
#    - Enable 2FA on your Google account
#    - Generate App Password: https://myaccount.google.com/apppasswords
# 4. Keep your .env file permissions restricted: chmod 600 .env
# 5. Generate a new FLASK_SECRET_KEY for each deployment
#
