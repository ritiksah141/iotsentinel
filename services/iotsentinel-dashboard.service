[Unit]
Description=IoTSentinel Web Dashboard
After=iotsentinel-backend.service
BindsTo=iotsentinel-backend.service

[Service]
Type=simple
User=pi
WorkingDirectory=/home/pi/iotsentinel
ExecStart=/home/pi/iotsentinel/venv/bin/python3 /home/pi/iotsentinel/dashboard/app.py
Restart=on-failure
RestartSec=5
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
