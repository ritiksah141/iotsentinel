[Unit]
Description=IoTSentinel Hardware Monitor (LED/Button)
After=iotsentinel-backend.service
BindsTo=iotsentinel-backend.service

[Service]
Type=simple
User=sentinel
WorkingDirectory=/home/sentinel/iotsentinel
ExecStart=/home/sentinel/iotsentinel/venv/bin/python3 /home/sentinel/iotsentinel/services/hardware_monitor.py
Restart=on-failure
RestartSec=5
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
