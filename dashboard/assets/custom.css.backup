  padding: 10px 14px;
}

.modal-body .input-group .form-control {
  border: 1px solid rgba(59, 130, 246, 0.15);
  border-left: none;
  padding: 10px 14px;
  font-size: 0.95rem;
  background: rgba(255, 255, 255, 0.8);
}

.modal-body .input-group .form-control:focus {
  box-shadow: none;
  border-color: rgba(59, 130, 246, 0.3);
  background: rgba(255, 255, 255, 0.95);
}

body.dark-mode .modal-body .input-group-text {
  background: rgba(96, 165, 250, 0.1);
  border-color: rgba(96, 165, 250, 0.2);
  color: #60a5fa;
}

body.dark-mode .modal-body .input-group .form-control {
  background: rgba(30, 41, 59, 0.6);
  border-color: rgba(96, 165, 250, 0.2);
  color: #f1f5f9;
}

body.dark-mode .modal-body .input-group .form-control:focus {
  background: rgba(30, 41, 59, 0.8);
  border-color: rgba(96, 165, 250, 0.4);
}

body.dark-mode .modal-body .input-group .form-control::placeholder {
  color: #64748b;
}

/* Role info card in User Management */
.modal-body .bg-light {
  background: rgba(59, 130, 246, 0.05) !important;
  border-radius: 10px;
}

body.dark-mode .modal-body .bg-light {
  background: rgba(30, 41, 59, 0.5) !important;
}

/* Password strength bar styling */
.modal-body #password-strength-bar,
.modal-body .progress {
  background: rgba(148, 163, 184, 0.15);
  border-radius: 6px;
  overflow: hidden;
}

.modal-body .progress-bar {
  border-radius: 6px;
  transition: width 0.4s ease, background-color 0.4s ease;
}

/* Helper text styling */
.modal-body .text-muted.small,
.modal-body small.text-muted {
  font-size: 0.8rem;
  line-height: 1.4;
}

/* Select dropdown styling in modals */
.modal-body .form-select {
  background: rgba(255, 255, 255, 0.8);
  border: 1px solid rgba(59, 130, 246, 0.15);
  border-radius: 10px;
  padding: 10px 14px;
  font-size: 0.95rem;
  transition: all 0.3s ease;
}

.modal-body .form-select:focus {
  border-color: rgba(59, 130, 246, 0.3);
  box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.15);
  background: rgba(255, 255, 255, 0.95);
}

body.dark-mode .modal-body .form-select {
  background: rgba(30, 41, 59, 0.6);
  border-color: rgba(96, 165, 250, 0.2);
  color: #f1f5f9;
}

body.dark-mode .modal-body .form-select:focus {
  background: rgba(30, 41, 59, 0.8);
  border-color: rgba(96, 165, 250, 0.4);
}

/* User list styling in modal */
.modal-body #user-list-container .card {
  border-radius: 10px;
  border: 1px solid rgba(59, 130, 246, 0.1);
  transition: all 0.3s ease;
}

.modal-body #user-list-container .card:hover {
  transform: translateY(-2px);
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
}

body.dark-mode .modal-body #user-list-container .card {
  background: rgba(30, 41, 59, 0.5);
  border-color: rgba(96, 165, 250, 0.15);
}

/* Section headers in modals */
.modal-body h6 {
  font-size: 0.95rem;
  letter-spacing: 0.025em;
}

/* Activity log styling */
.modal-body #user-activity-log {
  max-height: 400px;
  overflow-y: auto;
  padding-right: 5px;
}

.modal-body #user-activity-log::-webkit-scrollbar {
  width: 6px;
}

.modal-body #user-activity-log::-webkit-scrollbar-track {
  background: rgba(148, 163, 184, 0.1);
  border-radius: 3px;
}

.modal-body #user-activity-log::-webkit-scrollbar-thumb {
  background: rgba(59, 130, 246, 0.3);
  border-radius: 3px;
}

/* Biometric switch styling */
.modal-body .form-check.form-switch .form-check-input {
  width: 48px;
  height: 26px;
  border-radius: 13px;
  background-color: rgba(148, 163, 184, 0.3);
  border: none;
  cursor: pointer;
  transition: all 0.3s ease;
}

.modal-body .form-check.form-switch .form-check-input:checked {
  background-color: #10b981;
}

.modal-body .form-check.form-switch .form-check-input:focus {
  box-shadow: 0 0 0 3px rgba(16, 185, 129, 0.2);
}

/* ============================================================================
   TABLE ADAPTIVE STYLING - Dark Mode Support (ENHANCED SPECIFICITY)
   ============================================================================ */

/* Light mode table styling */
body.light-mode table.table-adaptive,
body.light-mode table.table-adaptive.table {
  background-color: white !important;
  color: #1a202c !important;
}

body.light-mode table.table-adaptive thead th,
body.light-mode table.table-adaptive.table thead th {
  background-color: #2d3748 !important;
  color: white !important;
  border-color: #4a5568 !important;
}

body.light-mode table.table-adaptive tbody tr,
body.light-mode table.table-adaptive.table tbody tr {
  background-color: white !important;
  color: #1a202c !important;
}

body.light-mode table.table-adaptive tbody tr:hover,
body.light-mode table.table-adaptive.table tbody tr:hover {
  background-color: #f7fafc !important;
}

body.light-mode table.table-adaptive td,
body.light-mode table.table-adaptive th,
body.light-mode table.table-adaptive.table td,
body.light-mode table.table-adaptive.table th {
  border-color: #e2e8f0 !important;
}

/* Dark mode table styling */
body.dark-mode table.table-adaptive,
body.dark-mode table.table-adaptive.table,
body.dark-mode table.table.table-adaptive {
  /* Override Bootstrap's CSS variables for table cells */
  --bs-table-bg: rgba(30, 41, 59, 0.3);
  --bs-table-color: rgba(255, 255, 255, 0.9);
  --bs-table-border-color: rgba(255, 255, 255, 0.1);
  --bs-table-striped-bg: rgba(30, 41, 59, 0.4);
  --bs-table-striped-color: rgba(255, 255, 255, 0.9);
  --bs-table-hover-bg: rgba(59, 130, 246, 0.15);
  --bs-table-hover-color: rgba(255, 255, 255, 0.95);

  background: rgba(30, 41, 59, 0.3) !important;
  color: rgba(255, 255, 255, 0.9) !important;
  border-color: rgba(255, 255, 255, 0.1) !important;
}

body.dark-mode table.table-adaptive thead,
body.dark-mode table.table-adaptive.table thead,
body.dark-mode table.table.table-adaptive thead {
  --bs-table-bg: rgba(30, 41, 59, 0.6);
  background: rgba(30, 41, 59, 0.6) !important;
}

body.dark-mode table.table-adaptive thead th,
body.dark-mode table.table-adaptive.table thead th,
body.dark-mode table.table.table-adaptive thead th {
  --bs-table-bg: rgba(30, 41, 59, 0.6);
  --bs-table-color: rgba(255, 255, 255, 0.95);
  background: rgba(30, 41, 59, 0.6) !important;
  color: rgba(255, 255, 255, 0.95) !important;
  border-color: rgba(255, 255, 255, 0.15) !important;
  font-weight: 600;
}

body.dark-mode table.table-adaptive tbody,
body.dark-mode table.table-adaptive.table tbody,
body.dark-mode table.table.table-adaptive tbody {
  --bs-table-bg: rgba(30, 41, 59, 0.2);
  background: rgba(30, 41, 59, 0.2) !important;
}

body.dark-mode table.table-adaptive tbody tr,
body.dark-mode table.table-adaptive.table tbody tr,
body.dark-mode table.table.table-adaptive tbody tr {
  --bs-table-bg: rgba(30, 41, 59, 0.2);
  --bs-table-color: rgba(255, 255, 255, 0.9);
  background: rgba(30, 41, 59, 0.2) !important;
  color: rgba(255, 255, 255, 0.9) !important;
  border-color: rgba(255, 255, 255, 0.08) !important;
}

body.dark-mode table.table-adaptive tbody tr:hover,
body.dark-mode table.table-adaptive.table tbody tr:hover,
body.dark-mode table.table.table-adaptive tbody tr:hover {
  --bs-table-hover-bg: rgba(59, 130, 246, 0.15);
  --bs-table-hover-color: rgba(255, 255, 255, 0.95);
  background: rgba(59, 130, 246, 0.15) !important;
  border-color: rgba(59, 130, 246, 0.3) !important;
}

body.dark-mode table.table-adaptive td,
body.dark-mode table.table-adaptive th,
body.dark-mode table.table-adaptive.table td,
body.dark-mode table.table-adaptive.table th,
body.dark-mode table.table.table-adaptive td,
body.dark-mode table.table.table-adaptive th {
  border-color: rgba(255, 255, 255, 0.1) !important;
  color: rgba(255, 255, 255, 0.9) !important;
}

/* Ensure text in cells is visible */
body.dark-mode table.table-adaptive td strong,
body.dark-mode table.table-adaptive th strong,
body.dark-mode table.table-adaptive.table td strong,
body.dark-mode table.table-adaptive.table th strong {
  color: rgba(255, 255, 255, 0.95) !important;
}

/* ============================================================================
 * SPOTLIGHT SEARCH - FLOATING BUTTON
 * ============================================================================ */

.spotlight-button-container {
  position: fixed;
  bottom: 24px;
  right: 24px;
  z-index: 999;
}

.spotlight-floating-button {
  border-radius: 50px;
  padding: 12px 24px;
  font-weight: 600;
  backdrop-filter: blur(var(--blur-medium));
  -webkit-backdrop-filter: blur(var(--blur-medium));
  background: linear-gradient(
    135deg,
    var(--glass-bg-solid),
    rgba(59, 130, 246, 0.3)
  );
  border: 1px solid rgba(255, 255, 255, 0.2);
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.15), 0 0 20px rgba(59, 130, 246, 0.3);
  transition: all var(--transition-fast) cubic-bezier(0.4, 0, 0.2, 1);
  color: white;
}

.spotlight-floating-button:hover {
  transform: translateY(-4px) scale(1.05);
  box-shadow: 0 12px 48px rgba(0, 0, 0, 0.2), 0 0 30px rgba(59, 130, 246, 0.5);
  color: white;
}

.spotlight-floating-button:active {
  transform: translateY(-2px) scale(1.02);
}

.spotlight-floating-button kbd {
  background: rgba(255, 255, 255, 0.15);
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: 4px;
  color: white;
  font-family: monospace;
}

body.dark-mode .spotlight-floating-button {
  background: linear-gradient(
    135deg,
    rgba(30, 41, 59, 0.7),
    rgba(96, 165, 250, 0.3)
  );
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4), 0 0 20px rgba(96, 165, 250, 0.4);
}

/* ============================================================================
 * SPOTLIGHT SEARCH - MODAL
 * ============================================================================ */

.spotlight-modal .modal-dialog {
  max-width: 680px;
  margin-top: 10vh;
}

.spotlight-modal .modal-content {
  border-radius: var(--radius-lg);
  backdrop-filter: blur(var(--blur-heavy));
  -webkit-backdrop-filter: blur(var(--blur-heavy));
  background: var(--glass-bg-solid);
  border: 1px solid rgba(255, 255, 255, 0.2);
  box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
  overflow: hidden;
}

body.dark-mode .spotlight-modal .modal-content {
  background: rgba(30, 41, 59, 0.85);
  border: 1px solid rgba(71, 85, 105, 0.5);
}

/* ============================================================================
 * SPOTLIGHT SEARCH - INPUT BAR
 * ============================================================================ */

.spotlight-search-bar {
  position: relative;
  padding: 24px;
  border-bottom: 1px solid rgba(203, 213, 225, 0.3);
}

body.dark-mode .spotlight-search-bar {
  border-bottom: 1px solid rgba(71, 85, 105, 0.3);
}

.spotlight-search-icon {
  position: absolute;
  left: 40px;
  top: 50%;
  transform: translateY(-50%);
  font-size: 1.25rem;
  color: var(--text-secondary);
  z-index: 1;
}

.spotlight-search-input {
  padding-left: 56px;
  padding-right: 48px;
  height: 56px;
  font-size: 1.1rem;
  border-radius: var(--radius-md);
  border: 1px solid rgba(203, 213, 225, 0.3);
  background: rgba(255, 255, 255, 0.5);
  transition: all var(--transition-fast);
}

.spotlight-search-input:focus {
  border-color: var(--accent-color);
  box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
  background: rgba(255, 255, 255, 0.8);
}

body.dark-mode .spotlight-search-input {
  background: rgba(30, 41, 59, 0.5);
  border-color: rgba(71, 85, 105, 0.5);
  color: var(--dark-text-primary);
}

body.dark-mode .spotlight-search-input:focus {
  background: rgba(30, 41, 59, 0.7);
  border-color: var(--dark-accent);
  box-shadow: 0 0 0 3px rgba(96, 165, 250, 0.15);
}

.spotlight-clear-button {
  position: absolute;
  right: 32px;
  top: 50%;
  transform: translateY(-50%);
  padding: 4px 8px;
  opacity: 0.5;
  transition: opacity var(--transition-fast);
}

.spotlight-clear-button:hover {
  opacity: 1;
}

/* ============================================================================
 * SPOTLIGHT SEARCH - KEYBOARD HINTS
 * ============================================================================ */

.spotlight-keyboard-hints {
  padding: 12px 24px;
  background: rgba(240, 244, 248, 0.5);
  border-bottom: 1px solid rgba(203, 213, 225, 0.3);
  font-size: 0.85rem;
  display: flex;
  align-items: center;
  gap: 8px;
}

body.dark-mode .spotlight-keyboard-hints {
  background: rgba(15, 23, 42, 0.5);
  border-bottom: 1px solid rgba(71, 85, 105, 0.3);
}

.spotlight-keyboard-hints kbd {
  background: rgba(255, 255, 255, 0.8);
  border: 1px solid rgba(203, 213, 225, 0.5);
  border-radius: 4px;
  padding: 2px 8px;
  font-family: monospace;
  font-size: 0.75rem;
  font-weight: 600;
}

body.dark-mode .spotlight-keyboard-hints kbd {
  background: rgba(30, 41, 59, 0.8);
  border-color: rgba(71, 85, 105, 0.5);
  color: var(--dark-text-primary);
}

/* ============================================================================
 * SPOTLIGHT SEARCH - RESULTS
 * ============================================================================ */

.spotlight-results {
  max-height: 60vh;
  overflow-y: auto;
  padding: 16px 24px;
}

.spotlight-result-wrapper {
  cursor: pointer;
  transition: all var(--transition-fast);
}

.spotlight-result-card {
  border-radius: var(--radius-md);
  border: 1px solid rgba(203, 213, 225, 0.3);
  background: rgba(255, 255, 255, 0.5);
  transition: all var(--transition-fast) cubic-bezier(0.4, 0, 0.2, 1);
}

.spotlight-result-card:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
  border-color: var(--accent-color);
}

.spotlight-result-selected {
  background: rgba(59, 130, 246, 0.1) !important;
  border-color: var(--accent-color) !important;
  box-shadow: 0 4px 16px rgba(59, 130, 246, 0.2) !important;
}

body.dark-mode .spotlight-result-card {
  background: rgba(30, 41, 59, 0.5);
  border-color: rgba(71, 85, 105, 0.5);
}

body.dark-mode .spotlight-result-card:hover {
  border-color: var(--dark-accent);
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.3);
}

body.dark-mode .spotlight-result-selected {
  background: rgba(96, 165, 250, 0.15) !important;
  border-color: var(--dark-accent) !important;
  box-shadow: 0 4px 16px rgba(96, 165, 250, 0.25) !important;
}

.spotlight-result-icon {
  width: 48px;
  height: 48px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: var(--radius-sm);
  background: rgba(59, 130, 246, 0.1);
}

body.dark-mode .spotlight-result-icon {
  background: rgba(96, 165, 250, 0.15);
}

.spotlight-action-button {
  transition: all var(--transition-fast);
}

.spotlight-action-button:hover {
  transform: translateX(4px);
}

/* Smooth scrollbar for results */
.spotlight-results::-webkit-scrollbar {
  width: 8px;
}

.spotlight-results::-webkit-scrollbar-track {
  background: rgba(240, 244, 248, 0.5);
  border-radius: 4px;
}

.spotlight-results::-webkit-scrollbar-thumb {
  background: rgba(203, 213, 225, 0.5);
  border-radius: 4px;
}

.spotlight-results::-webkit-scrollbar-thumb:hover {
  background: rgba(203, 213, 225, 0.8);
}

body.dark-mode .spotlight-results::-webkit-scrollbar-track {
  background: rgba(15, 23, 42, 0.5);
}

body.dark-mode .spotlight-results::-webkit-scrollbar-thumb {
  background: rgba(71, 85, 105, 0.5);
}

body.dark-mode .spotlight-results::-webkit-scrollbar-thumb:hover {
  background: rgba(71, 85, 105, 0.8);
}

/* Empty state */
.spotlight-results .text-center {
  padding: 60px 20px;
}

/* Animations */
@keyframes spotlight-fade-in {
  from {
    opacity: 0;
    transform: translateY(-10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.spotlight-result-wrapper {
  animation: spotlight-fade-in 0.2s ease-out;
}

/* Responsive adjustments */
@media (max-width: 768px) {
  .spotlight-button-container {
    bottom: 16px;
    right: 16px;
  }

  .spotlight-floating-button {
    padding: 10px 16px;
    font-size: 0.9rem;
  }

  .spotlight-floating-button span {
    display: none !important;
  }

  .spotlight-modal .modal-dialog {
    margin: 16px;
    max-width: calc(100% - 32px);
  }

  .spotlight-search-bar {
    padding: 16px;
  }

  .spotlight-search-input {
    height: 48px;
    font-size: 1rem;
  }

  .spotlight-keyboard-hints {
    display: none;
  }
}
