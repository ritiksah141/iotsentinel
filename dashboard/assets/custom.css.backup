/* ============================================================================
 * HEADER FROSTED GLASS BUTTONS - Modern Glassmorphism
 * ============================================================================ */

/* Base frosted button style for header - LIGHT MODE */
.glass-card .btn-link,
.glass-card .btn[color="link"] {
  background: rgba(255, 255, 255, 0.65) !important;
  backdrop-filter: blur(16px) saturate(180%) !important;
  -webkit-backdrop-filter: blur(16px) saturate(180%) !important;
  border: 1px solid rgba(203, 213, 225, 0.5) !important;
  border-radius: 12px !important;
  color: #475569 !important;
  padding: 0.5rem 0.85rem !important;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1) !important;
  position: relative;
  overflow: hidden;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06), 0 1px 3px rgba(0, 0, 0, 0.04),
    inset 0 1px 0 rgba(255, 255, 255, 0.8) !important;
}

/* Subtle inner glow effect */
.glass-card .btn-link::before,
.glass-card .btn[color="link"]::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(
    135deg,
    rgba(255, 255, 255, 0.4) 0%,
    rgba(255, 255, 255, 0) 50%,
    rgba(255, 255, 255, 0.2) 100%
  );
  border-radius: 11px;
  pointer-events: none;
  opacity: 0.8;
}

/* Hover state - enhanced glow */
.glass-card .btn-link:hover,
.glass-card .btn[color="link"]:hover {
  background: rgba(255, 255, 255, 0.85) !important;
  border-color: rgba(102, 126, 234, 0.4) !important;
  color: #1e293b !important;
  transform: translateY(-2px) !important;
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1), 0 0 20px rgba(102, 126, 234, 0.12),
    inset 0 1px 0 rgba(255, 255, 255, 0.9) !important;
}

/* Active/pressed state */
.glass-card .btn-link:active,
.glass-card .btn[color="link"]:active {
  transform: translateY(0) scale(0.98) !important;
  background: rgba(255, 255, 255, 0.7) !important;
}

/* Focus state for accessibility */
.glass-card .btn-link:focus,
.glass-card .btn[color="link"]:focus {
  outline: none !important;
  box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.25), 0 2px 8px rgba(0, 0, 0, 0.06),
    inset 0 1px 0 rgba(255, 255, 255, 0.8) !important;
}

/* Icon styling in header buttons - LIGHT MODE */
.glass-card .btn-link i,
.glass-card .btn[color="link"] i {
  font-size: 1.1rem !important;
  color: #64748b !important;
  filter: drop-shadow(0 1px 1px rgba(255, 255, 255, 0.5));
  transition: all 0.3s ease !important;
}

.glass-card .btn-link:hover i,
.glass-card .btn[color="link"]:hover i {
  transform: scale(1.1);
  color: #3b82f6 !important;
}

