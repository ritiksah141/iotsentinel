  .floating-label input:not(:placeholder-shown) ~ label {
    top: -0.5rem;
    left: 0.5rem;
    font-size: 0.75rem;
    color: var(--accent-color);
    background: var(--bg-primary);
    padding: 0 0.5rem;
  }

