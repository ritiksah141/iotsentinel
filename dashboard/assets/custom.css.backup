  }

  /* ============================================================================
 * CONTINUE WITH EXISTING THEME VARIABLES
 * ============================================================================ */
  --dark-shadow-lg: rgba(0, 0, 0, 0.6);

  /* Gradient backgrounds for dark mode */
  --dark-gradient-primary: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  --dark-gradient-accent: linear-gradient(135deg, #60a5fa 0%, #a78bfa 100%);
  --dark-gradient-success: linear-gradient(135deg, #34d399 0%, #10b981 100%);
  --dark-gradient-danger: linear-gradient(135deg, #f87171 0%, #ef4444 100%);

  /* Default to light theme */
  --bg-primary: var(--light-bg-primary);
  --bg-secondary: var(--light-bg-secondary);
  --bg-tertiary: var(--light-bg-tertiary);
  --bg-glass: var(--light-bg-glass);
  --text-primary: var(--light-text-primary);
  --text-secondary: var(--light-text-secondary);
  --border-color: var(--light-border);
  --accent-color: var(--light-accent);
  --accent-secondary: var(--light-accent-secondary);
  --accent-glow: var(--light-accent-glow);
  --success-color: var(--light-success);
  --warning-color: var(--light-warning);
  --danger-color: var(--light-danger);
  --info-color: var(--light-info);
  --shadow-color: var(--light-shadow);
  --shadow-lg: var(--light-shadow-lg);
  --gradient-primary: var(--light-gradient-primary);
  --gradient-accent: var(--light-gradient-accent);
  --gradient-success: var(--light-gradient-success);
  --gradient-danger: var(--light-gradient-danger);

  /* Glassmorphism effects */
  --glass-blur: 12px;
  --glass-border: 1px solid rgba(255, 255, 255, 0.18);

  /* Animation durations */
  --transition-fast: 0.15s;
  --transition-base: 0.3s;
  --transition-slow: 0.5s;
}

/* Dark mode class */
body.dark-mode {
  --bg-primary: var(--dark-bg-primary);
  --bg-secondary: var(--dark-bg-secondary);
  --bg-tertiary: var(--dark-bg-tertiary);
  --bg-glass: var(--dark-bg-glass);
  --text-primary: var(--dark-text-primary);
  --text-secondary: var(--dark-text-secondary);
  --border-color: var(--dark-border);
  --accent-color: var(--dark-accent);
  --accent-secondary: var(--dark-accent-secondary);
  --accent-glow: var(--dark-accent-glow);
  --success-color: var(--dark-success);
  --warning-color: var(--dark-warning);
  --danger-color: var(--dark-danger);
  --info-color: var(--dark-info);
  --shadow-color: var(--dark-shadow);
  --shadow-lg: var(--dark-shadow-lg);
  --gradient-primary: var(--dark-gradient-primary);
  --gradient-accent: var(--dark-gradient-accent);
  --gradient-success: var(--dark-gradient-success);
  --gradient-danger: var(--dark-gradient-danger);
  --glass-border: 1px solid rgba(255, 255, 255, 0.1);
  background: #0f172a;
}

/* ============================================================================
 * BASE STYLES WITH ANIMATED BACKGROUND
 * ============================================================================ */

body {
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto,
    "Helvetica Neue", Arial, sans-serif;
  background: #f0f4f8;
  color: var(--text-primary);
  transition: background-color var(--transition-slow) ease,
    color var(--transition-base) ease;
  line-height: 1.6;
  overflow-x: hidden;
  position: relative;
}

/* Clean background - no gradient, pure for frosted glass */
body::before {
  display: none;
}

/* Add subtle grain texture overlay for depth */
body::after {
  content: "";
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 400 400"><filter id="noise"><feTurbulence type="fractalNoise" baseFrequency="1.5" numOctaves="4" stitchTiles="stitch"/></filter><rect width="100%" height="100%" filter="url(%23noise)" opacity="0.015"/></svg>');
  pointer-events: none;
  z-index: 1;
  opacity: 1;
}

@keyframes gradientShift {
  0% {
    background-position: 0% 50%;
  }
  25% {
    background-position: 50% 0%;
  }
  50% {
    background-position: 100% 50%;
  }
  75% {
    background-position: 50% 100%;
  }
  100% {
    background-position: 0% 50%;
  }
}

.dashboard-container {
  max-width: 100%;
  padding: 20px;
  position: relative;
  z-index: 1;
}

/* ============================================================================
 * HEADINGS WITH GRADIENT TEXT
 * ============================================================================ */

h1,
h2,
h3,
h4,
h5,
h6,
.h1,
.h2,
.h3,
.h4,
.h5,
.h6 {
  color: var(--text-primary);
  font-weight: 700;
  letter-spacing: -0.02em;
  transition: all var(--transition-base) ease;
}

h1,
.h1 {
  background: var(--gradient-accent);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  filter: drop-shadow(0 0 20px var(--accent-glow));
  animation: subtleGlow 3s ease-in-out infinite;
}

@keyframes subtleGlow {
  0%,
  100% {
    filter: drop-shadow(0 0 20px var(--accent-glow));
  }
  50% {
    filter: drop-shadow(0 0 30px var(--accent-glow));
  }
}

/* ============================================================================
 * GLASSMORPHIC HEADING STYLES - Universal Design System
 * ============================================================================ */

/* Subtle glow for all major headings */
h1,
h2,
h3,
.h1,
.h2,
.h3 {
  text-shadow: 0 2px 10px rgba(102, 126, 234, 0.15);
  letter-spacing: -0.02em;
}

/* Glassmorphic heading container - can be applied anywhere */
.glass-heading-container {
  background: var(--glass-bg-light);
  backdrop-filter: blur(var(--blur-light)) saturate(120%);
  -webkit-backdrop-filter: blur(var(--blur-light)) saturate(120%);
  border: 1px solid var(--glass-border-light);
  border-radius: var(--radius-md);
  padding: 1.5rem 2rem;
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1),
    inset 0 1px 0 rgba(255, 255, 255, 0.1);
  position: relative;
  overflow: hidden;
}

.glass-heading-container::before {
  content: "";
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(
    90deg,
    transparent,
    rgba(255, 255, 255, 0.05),
    transparent
  );
  transition: left 0.5s ease;
}

.glass-heading-container:hover::before {
  left: 100%;
}

/* Dark mode support */
body.dark-mode h1,
body.dark-mode h2,
body.dark-mode h3,
body.dark-mode .h1,
body.dark-mode .h2,
body.dark-mode .h3 {
  text-shadow: 0 2px 15px rgba(102, 126, 234, 0.3);
}

body.dark-mode .glass-heading-container {
  background: var(--glass-bg-dark-medium);
  border: 1px solid var(--glass-border-light);
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3),
    inset 0 1px 0 rgba(255, 255, 255, 0.05);
}

/* Card headers with gradient */
.card-header {
  background: var(--glass-bg-light) !important;
  backdrop-filter: blur(var(--blur-light)) saturate(140%);
  -webkit-backdrop-filter: blur(var(--blur-light)) saturate(140%);
  border-bottom: 2px solid transparent !important;
  border-image: linear-gradient(
      90deg,
      rgba(102, 126, 234, 0.6),
      rgba(240, 147, 251, 0.6),
      rgba(79, 172, 254, 0.6)
    )
    1 !important;
  color: var(--text-primary) !important;
  font-weight: 600;
  position: relative;
  overflow: hidden;
  box-shadow: 0 4px 16px rgba(102, 126, 234, 0.1);
}

.card-header::before {
  content: "";
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(
    90deg,
    transparent,
    rgba(255, 255, 255, 0.1),
    transparent
  );
  transition: left 0.5s ease;
}

.card-header:hover::before {
  left: 100%;
}

/* ============================================================================
 * GLASSMORPHISM HEADER
 * ============================================================================ */

.header-row {
  background: rgba(255, 255, 255, 0.06);
  backdrop-filter: blur(10px) saturate(140%);
  -webkit-backdrop-filter: blur(10px) saturate(140%);
  border: 1px solid rgba(255, 255, 255, 0.15);
  border-radius: 20px;
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3),
    0 0 0 1px rgba(255, 255, 255, 0.1) inset;
  padding: 24px;
  margin-bottom: 24px;
  border: var(--glass-border);
  box-shadow: 0 8px 32px var(--shadow-color),
    0 0 0 1px var(--border-color) inset;
  position: relative;
  overflow: hidden;
  transition: all var(--transition-base) ease;
}

.header-row::before {
  content: "";
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(
    circle,
    rgba(59, 130, 246, 0.05) 0%,
    transparent 70%
  );
  animation: headerPulse 8s ease-in-out infinite;
}

@keyframes headerPulse {
  0%,
  100% {
    transform: translate(0, 0) scale(1);
  }
  50% {
    transform: translate(-10%, -10%) scale(1.1);
  }
}

.dashboard-title {
  font-size: 2.5rem;
  font-weight: 800;
  background: var(--gradient-accent);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin: 0;
  letter-spacing: -0.02em;
  position: relative;
  z-index: 1;
  animation: titleFloat 6s ease-in-out infinite;
}

@keyframes titleFloat {
  0%,
  100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-4px);
  }
}

.subtitle {
  font-size: 1.1rem;
  color: var(--text-secondary);
  margin: 8px 0 0 0;
  position: relative;
  z-index: 1;
}

/* ============================================================================
 * GLASSMORPHISM CARDS WITH HOVER EFFECTS
 * ============================================================================ */

.card,
.cyber-card {
  background: var(--glass-bg-medium);
  backdrop-filter: blur(var(--blur-light)) saturate(140%);
  -webkit-backdrop-filter: blur(var(--blur-light)) saturate(140%);
  border: 1px solid var(--glass-border-medium);
  border-radius: var(--radius-md);
  box-shadow: var(--shadow-lg), 0 0 0 1px var(--glass-border-light) inset,
    var(--shadow-glow);
  transition: transform var(--transition-fast) ease,
    box-shadow var(--transition-fast) ease;
  margin-bottom: 24px;
  position: relative;
  overflow: hidden;
  transform: translateZ(0);
  contain: layout style paint;
}

.card::before,
.cyber-card::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 2px;
  background: var(--gradient-accent);
  opacity: 0;
  transition: opacity var(--transition-base) ease;
}

.card:hover,
.cyber-card:hover {
  transform: translateY(-4px) scale(1.01);
  box-shadow: 0 16px 48px rgba(0, 0, 0, 0.4),
    0 0 0 1px rgba(240, 147, 251, 0.4) inset, 0 0 30px rgba(102, 126, 234, 0.2),
    0 0 0 2px rgba(255, 255, 255, 0.15) inset;
  border-color: rgba(240, 147, 251, 0.3);
  will-change: transform;
}

.card:hover::before,
.cyber-card:hover::before {
  opacity: 1;
}

.card-body {
  padding: 20px;
  color: var(--text-primary);
  position: relative;
  z-index: 1;
}

/* Animated card shine effect */
.card::after,
.cyber-card::after {
  content: "";
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: linear-gradient(
    45deg,
    transparent 30%,
    rgba(255, 255, 255, 0.05) 50%,
    transparent 70%
  );
  transform: rotate(45deg);
  animation: cardShine 10s ease-in-out infinite;
}

@keyframes cardShine {
  0%,
  100% {
    transform: translateX(-100%) translateY(-100%) rotate(45deg);
  }
  50% {
    transform: translateX(100%) translateY(100%) rotate(45deg);
  }
}

/* ============================================================================
 * ENHANCED BUTTONS WITH MICRO-INTERACTIONS
 * ============================================================================ */

.btn,
.cyber-button {
  background: rgba(59, 130, 246, 0.15);
  backdrop-filter: blur(var(--blur-medium)) saturate(180%);
  -webkit-backdrop-filter: blur(var(--blur-medium)) saturate(180%);
  color: #1e40af;
  border: 1px solid rgba(59, 130, 246, 0.25);
  border-radius: var(--radius-sm);
  padding: 10px 20px;
  font-weight: 600;
  font-size: 0.95rem;
  transition: all var(--transition-fast) cubic-bezier(0.4, 0, 0.2, 1);
  cursor: pointer;
  position: relative;
  overflow: hidden;
  box-shadow: 0 4px 12px rgba(59, 130, 246, 0.08);
}

.btn::before,
.cyber-button::before {
  content: "";
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  border-radius: 50%;
  background: rgba(59, 130, 246, 0.15);
  transform: translate(-50%, -50%);
  transition: width 0.6s ease, height 0.6s ease;
}

.btn:hover::before,
.cyber-button:hover::before {
  width: 300px;
  height: 300px;
}

.btn:hover,
.cyber-button:hover {
  background: rgba(59, 130, 246, 0.25);
  border: 1px solid rgba(59, 130, 246, 0.4);
  transform: translateY(-2px);
  box-shadow: 0 8px 24px rgba(59, 130, 246, 0.15);
  backdrop-filter: blur(var(--blur-heavy)) saturate(200%);
  -webkit-backdrop-filter: blur(var(--blur-heavy)) saturate(200%);
}

.btn:active,
.cyber-button:active {
  transform: translateY(0) scale(0.98);
  box-shadow: 0 2px 8px rgba(59, 130, 246, 0.15);
}

.btn-outline-primary {
  background: rgba(59, 130, 246, 0.05);
  backdrop-filter: blur(var(--blur-medium));
  -webkit-backdrop-filter: blur(var(--blur-medium));
  color: #3b82f6;
  border: 2px solid rgba(59, 130, 246, 0.35);
  box-shadow: none;
}

.btn-outline-primary:hover {
  background: rgba(59, 130, 246, 0.15);
  color: #3b82f6;
  border-color: rgba(59, 130, 246, 0.5);
  box-shadow: var(--shadow-md);
  transform: translateY(-2px);
}

.btn-success {
  background: rgba(16, 185, 129, 0.15);
  backdrop-filter: blur(var(--blur-medium));
  -webkit-backdrop-filter: blur(var(--blur-medium));
  border: 1px solid rgba(16, 185, 129, 0.25);
  box-shadow: var(--shadow-sm);
  color: #10b981;
  font-weight: 600;
}

.btn-success:hover {
  background: rgba(16, 185, 129, 0.25);
  border-color: rgba(16, 185, 129, 0.35);
  box-shadow: var(--shadow-md);
  transform: translateY(-2px);
}

.btn-danger {
  background: rgba(239, 68, 68, 0.15);
  backdrop-filter: blur(var(--blur-medium));
  -webkit-backdrop-filter: blur(var(--blur-medium));
  border: 1px solid rgba(239, 68, 68, 0.25);
  box-shadow: var(--shadow-sm);
  color: #ef4444;
  font-weight: 600;
}

.btn-danger:hover {
  background: rgba(239, 68, 68, 0.25);
  border-color: rgba(239, 68, 68, 0.35);
  box-shadow: var(--shadow-md);
  transform: translateY(-2px);
}

.btn-warning {
  background: rgba(245, 158, 11, 0.15);
  backdrop-filter: blur(var(--blur-medium));
  -webkit-backdrop-filter: blur(var(--blur-medium));
  border: 1px solid rgba(245, 158, 11, 0.25);
  box-shadow: var(--shadow-sm);
  color: #f59e0b;
  font-weight: 600;
}

.btn-warning:hover {
  background: rgba(245, 158, 11, 0.25);
  border-color: rgba(245, 158, 11, 0.35);
  box-shadow: var(--shadow-md);
  transform: translateY(-2px);
}

.btn-info {
  background: rgba(6, 182, 212, 0.15);
  backdrop-filter: blur(var(--blur-medium));
  -webkit-backdrop-filter: blur(var(--blur-medium));
  border: 1px solid rgba(6, 182, 212, 0.25);
  box-shadow: var(--shadow-sm);
  color: #06b6d4;
  font-weight: 600;
}

.btn-info:hover {
  background: rgba(6, 182, 212, 0.25);
  border-color: rgba(6, 182, 212, 0.35);
  box-shadow: var(--shadow-md);
  transform: translateY(-2px);
}

.pill-btn {
  border-radius: 24px;
  padding: 8px 18px;
  font-size: 0.9rem;
  transition: all var(--transition-base) ease;
}

.pill-btn.active {
  background: rgba(59, 130, 246, 0.25);
  backdrop-filter: blur(var(--blur-medium));
  -webkit-backdrop-filter: blur(var(--blur-medium));
  border: 1px solid rgba(59, 130, 246, 0.35);
  color: #3b82f6;
  box-shadow: var(--shadow-md);
  transform: scale(1.05);
}

/* ============================================================================
 * GLASSMORPHIC FORMS AND INPUTS
 * ============================================================================ */

.form-control,
.cyber-input,
input[type="text"],
input[type="email"],
input[type="password"],
input[type="number"],
select,
textarea {
  background: var(--glass-bg-light);
  backdrop-filter: blur(var(--blur-medium)) saturate(180%);
  -webkit-backdrop-filter: blur(var(--blur-medium)) saturate(180%);
  border: 1px solid var(--glass-border-light);
  color: var(--text-primary);
  border-radius: var(--radius-sm);
  padding: 12px 16px;
  transition: all var(--transition-fast) cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: var(--shadow-sm);
}

.form-control:focus,
.cyber-input:focus,
input:focus,
select:focus,
textarea:focus {
  background: var(--glass-bg-medium);
  border: 1px solid rgba(59, 130, 246, 0.3);
  box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.05), var(--shadow-md);
  outline: none;
  transform: translateY(-1px);
  backdrop-filter: blur(var(--blur-heavy)) saturate(200%);
  -webkit-backdrop-filter: blur(var(--blur-heavy)) saturate(200%);
}

.form-label {
  color: var(--text-primary);
  font-weight: 600;
  margin-bottom: 8px;
  font-size: 0.95rem;
}

::placeholder {
  color: var(--text-secondary);
  opacity: 0.6;
}

/* ============================================================================
 * ANIMATED BADGES WITH GLOW
 * ============================================================================ */

.badge {
  padding: 6px 12px;
  border-radius: 8px;
  font-weight: 600;
  font-size: 0.85rem;
  transition: all var(--transition-base) ease;
  display: inline-block;
}

.badge-success {
  background: var(--gradient-success);
  color: white;
  box-shadow: 0 0 20px rgba(16, 185, 129, 0.5),
    0 4px 12px rgba(16, 185, 129, 0.3);
  animation: badgePulse 2s ease-in-out infinite;
}

.badge-danger {
  background: var(--gradient-danger);
  color: white;
  box-shadow: 0 0 20px rgba(239, 68, 68, 0.5), 0 4px 12px rgba(239, 68, 68, 0.3);
  animation: badgePulse 2s ease-in-out infinite;
}

.badge-warning {
  background: linear-gradient(135deg, var(--warning-color) 0%, #f97316 100%);
  color: #000;
  font-weight: 700;
  box-shadow: 0 0 20px rgba(245, 158, 11, 0.5),
    0 4px 12px rgba(245, 158, 11, 0.3);
  animation: badgePulse 2s ease-in-out infinite;
}

.badge-info {
  background: linear-gradient(135deg, var(--info-color) 0%, #0891b2 100%);
  color: white;
  box-shadow: 0 0 20px rgba(6, 182, 212, 0.5), 0 4px 12px rgba(6, 182, 212, 0.3);
}

.badge-primary {
  background: var(--gradient-accent);
  color: white;
  box-shadow: 0 0 20px var(--accent-glow), 0 4px 12px rgba(59, 130, 246, 0.3);
  animation: badgePulse 2s ease-in-out infinite;
}

@keyframes badgePulse {
  0%,
  100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.05);
  }
}

.badge:hover {
  transform: scale(1.1) translateY(-2px);
}

.badge-count {
  background: var(--gradient-accent);
  color: white;
  padding: 8px 16px;
  border-radius: 24px;
  font-weight: 700;
  box-shadow: 0 0 16px var(--accent-glow), 0 4px 12px rgba(59, 130, 246, 0.4);
}

/* ============================================================================
 * GLASSMORPHIC STATUS BAR
 * ============================================================================ */

.status-bar {
  background: var(--bg-glass);
  backdrop-filter: blur(var(--glass-blur));
  -webkit-backdrop-filter: blur(var(--glass-blur));
  border-radius: 16px;
  padding: 20px;
  border: var(--glass-border);
  margin-bottom: 24px;
  box-shadow: 0 4px 16px var(--shadow-color);
}

.status-metric-card {
  background: var(--bg-tertiary);
  backdrop-filter: blur(8px);
  -webkit-backdrop-filter: blur(8px);
  border-radius: 12px;
  padding: 16px;
  border-left: 4px solid transparent;
  border-image: var(--gradient-accent) 1;
  transition: all var(--transition-base) cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.status-metric-card::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: radial-gradient(
    circle at top left,
    rgba(59, 130, 246, 0.1) 0%,
    transparent 50%
  );
  opacity: 0;
  transition: opacity var(--transition-base) ease;
}

.status-metric-card:hover {
  transform: translateY(-4px) scale(1.02);
  box-shadow: 0 8px 24px var(--shadow-color);
}

.status-metric-card:hover::before {
  opacity: 1;
}

.metric-label {
  font-size: 0.9rem;
  color: var(--text-secondary);
  font-weight: 600;
  margin-bottom: 8px;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.metric-value {
  font-size: 2rem;
  font-weight: 800;
  background: var(--gradient-accent);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  position: relative;
  z-index: 1;
}

.status-icon {
  font-size: 2rem;
  color: var(--accent-color);
  margin-right: 16px;
  animation: iconFloat 3s ease-in-out infinite;
}

@keyframes iconFloat {
  0%,
  100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-6px);
  }
}

.traffic-metric {
  font-size: 1.8rem;
  font-weight: 800;
  background: var(--gradient-accent);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

/* ============================================================================
 * DEVICE LIST WITH ENHANCED INTERACTION
 * ============================================================================ */

.device-grid-compact {
  display: grid;
  grid-template-columns: 1fr;
  gap: 16px;
}

.device-item-compact,
.active-device-item {
  background: var(--bg-glass);
  backdrop-filter: blur(8px);
  -webkit-backdrop-filter: blur(8px);
  border-radius: 12px;
  padding: 16px;
  border: var(--glass-border);
  border-left: 4px solid var(--border-color);
  transition: all var(--transition-base) cubic-bezier(0.4, 0, 0.2, 1);
  cursor: pointer;
  position: relative;
  overflow: hidden;
}

.device-item-compact::before,
.active-device-item::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 4px;
  height: 100%;
  background: var(--gradient-accent);
  opacity: 0;
  transition: all var(--transition-base) ease;
}

.device-item-compact:hover,
.active-device-item:hover {
  transform: translateX(8px) scale(1.02);
  box-shadow: 0 8px 24px var(--shadow-lg), 0 0 0 1px var(--accent-color) inset;
  border-left-color: var(--accent-color);
}

.device-item-compact:hover::before,
.active-device-item:hover::before {
  opacity: 1;
}

.device-name-compact {
  font-weight: 700;
  font-size: 1.05rem;
  color: var(--text-primary);
  margin-bottom: 4px;
}

.device-ip-compact {
  font-size: 0.9rem;
  color: var(--text-secondary);
  font-family: "SF Mono", "Monaco", "Courier New", monospace;
  background: rgba(59, 130, 246, 0.1);
  padding: 2px 8px;
  border-radius: 4px;
  display: inline-block;
}

/* ============================================================================
 * ENHANCED ALERTS
 * ============================================================================ */

.alert,
.alert-card-compact,
.compact-alert {
  border-radius: 12px;
  padding: 16px 20px;
  margin-bottom: 16px;
  border-left: 4px solid;
  backdrop-filter: blur(8px);
  -webkit-backdrop-filter: blur(8px);
  transition: all var(--transition-base) ease;
  position: relative;
  overflow: hidden;
}

.alert::before,
.alert-card-compact::before,
.compact-alert::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(
    90deg,
    transparent,
    rgba(255, 255, 255, 0.05),
    transparent
  );
  transform: translateX(-100%);
  transition: transform 0.6s ease;
}

.alert:hover::before,
.alert-card-compact:hover::before,
.compact-alert:hover::before {
  transform: translateX(100%);
}

.alert-primary {
  background: rgba(59, 130, 246, 0.15);
  border-left-color: var(--accent-color);
  box-shadow: 0 0 16px rgba(59, 130, 246, 0.2);
}

.alert-success {
  background: rgba(16, 185, 129, 0.15);
  border-left-color: var(--success-color);
  box-shadow: 0 0 16px rgba(16, 185, 129, 0.2);
}

.alert-danger {
  background: rgba(239, 68, 68, 0.15);
  border-left-color: var(--danger-color);
  box-shadow: 0 0 16px rgba(239, 68, 68, 0.2);
  animation: alertPulse 2s ease-in-out infinite;
}

@keyframes alertPulse {
  0%,
  100% {
    box-shadow: 0 0 16px rgba(239, 68, 68, 0.2);
  }
  50% {
    box-shadow: 0 0 24px rgba(239, 68, 68, 0.4);
  }
}

.alert-warning {
  background: rgba(245, 158, 11, 0.15);
  border-left-color: var(--warning-color);
  box-shadow: 0 0 16px rgba(245, 158, 11, 0.2);
}

.alert-info {
  background: rgba(6, 182, 212, 0.15);
  border-left-color: var(--info-color);
  box-shadow: 0 0 16px rgba(6, 182, 212, 0.2);
}

.alert-text-compact {
  font-size: 0.95rem;
  color: var(--text-primary);
  line-height: 1.6;
}

/* ============================================================================
 * MODERN TABLES
 * ============================================================================ */

.table {
  color: var(--text-primary);
  background: var(--bg-glass);
  backdrop-filter: blur(8px);
  -webkit-backdrop-filter: blur(8px);
  border-color: var(--border-color);
  border-radius: 12px;
  overflow: hidden;
}

.table thead th {
  background: var(--bg-tertiary);
  color: var(--text-primary);
  border-color: var(--border-color);
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  font-size: 0.85rem;
  padding: 16px;
}

.table tbody td {
  border-color: var(--border-color);
  color: var(--text-primary);
  padding: 14px 16px;
  transition: all var(--transition-base) ease;
}

.table-hover tbody tr {
  transition: all var(--transition-base) ease;
}

.table-hover tbody tr:hover {
  background: var(--bg-tertiary);
  transform: scale(1.01);
  box-shadow: 0 4px 12px var(--shadow-color);
}

.table-striped tbody tr:nth-of-type(odd) {
  background: rgba(59, 130, 246, 0.03);
}

/* ============================================================================
 * ENHANCED ACCORDION
 * ============================================================================ */

.accordion,
.cyber-accordion {
  --bs-accordion-bg: var(--bg-glass);
  --bs-accordion-border-color: var(--border-color);
}

.accordion-item {
  background: var(--bg-glass);
  backdrop-filter: blur(8px);
  -webkit-backdrop-filter: blur(8px);
  border: var(--glass-border);
  margin-bottom: 16px;
  border-radius: 12px;
  overflow: hidden;
  transition: all var(--transition-base) ease;
}

.accordion-item:hover {
  box-shadow: 0 4px 16px var(--shadow-color);
}

.accordion-button {
  background: var(--bg-tertiary);
  color: var(--text-primary);
  font-weight: 600;
  padding: 16px 20px;
  transition: all var(--transition-base) ease;
}

.accordion-button:not(.collapsed) {
  background: var(--gradient-accent);
  color: white;
  box-shadow: 0 0 20px var(--accent-glow);
}

.accordion-button:focus {
  box-shadow: 0 0 0 4px rgba(59, 130, 246, 0.2);
  border-color: var(--accent-color);
}

.accordion-body {
  background: var(--bg-secondary);
  padding: 20px;
  color: var(--text-primary);
}

/* ============================================================================
 * MODERN TABS
 * ============================================================================ */

.nav-tabs {
  border-bottom: 2px solid var(--border-color);
  position: relative;
}

.nav-tabs::after {
  content: "";
  position: absolute;
  bottom: -2px;
  left: 0;
  height: 2px;
  background: var(--gradient-accent);
  transition: all var(--transition-base) ease;
  width: 0;
}

.nav-tabs .nav-link {
  color: var(--text-secondary);
  border: none;
  border-bottom: 3px solid transparent;
  padding: 12px 20px;
  font-weight: 600;
  transition: all var(--transition-base) ease;
  position: relative;
}

.nav-tabs .nav-link::before {
  content: "";
  position: absolute;
  bottom: -3px;
  left: 0;
  right: 0;
  height: 3px;
  background: var(--gradient-accent);
  transform: scaleX(0);
  transition: transform var(--transition-base) ease;
}

.nav-tabs .nav-link:hover {
  color: var(--text-primary);
  background: rgba(59, 130, 246, 0.05);
}

.nav-tabs .nav-link.active {
  color: var(--accent-color);
  background: transparent;
}

.nav-tabs .nav-link.active::before {
  transform: scaleX(1);
}

.tab-content {
  padding: 24px 0;
  animation: fadeInUp 0.5s ease;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* ============================================================================
 * GLASSMORPHIC MODALS
 * ============================================================================ */

.modal-content {
  background: var(--glass-bg-solid);
  backdrop-filter: blur(var(--blur-heavy)) saturate(200%) brightness(1.1);
  -webkit-backdrop-filter: blur(var(--blur-heavy)) saturate(200%)
    brightness(1.1);
  border: 1px solid var(--glass-border-medium);
  border-radius: var(--radius-lg);
  box-shadow: 0 12px 40px rgba(0, 0, 0, 0.12),
    inset 0 1px 1px rgba(255, 255, 255, 0.2),
    inset 0 -1px 1px rgba(0, 0, 0, 0.05);
  position: relative;
  overflow: hidden;
  transform: translateZ(0);
  contain: layout style paint;
  /* Add noise texture */
  background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 300 300"><filter id="noise"><feTurbulence type="fractalNoise" baseFrequency="0.9" numOctaves="4" stitchTiles="stitch"/></filter><rect width="100%" height="100%" filter="url(%23noise)" opacity="0.03"/></svg>');
  background-blend-mode: overlay;
}

.modal-content::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(
    135deg,
    rgba(255, 255, 255, 0.02) 0%,
    rgba(255, 255, 255, 0.01) 50%,
    rgba(255, 255, 255, 0.02) 100%
  );
  background-size: 300% 300%;
  animation: gradientShift 25s linear infinite;
  pointer-events: none;
  z-index: 0;
  opacity: 1;
  transform: translateZ(0);
  will-change: background-position;
  backface-visibility: hidden;
}

.modal-header {
  border-bottom: 1px solid rgba(255, 255, 255, 0.08);
  background: rgba(255, 255, 255, 0.02);
  backdrop-filter: blur(var(--blur-medium)) saturate(200%);
  -webkit-backdrop-filter: blur(var(--blur-medium)) saturate(200%);
  padding: 20px 24px;
  border-radius: 24px 24px 0 0;
  position: relative;
  z-index: 1;
}

.modal-title {
  color: var(--text-primary);
  font-weight: 700;
}

.modal-body {
  background: transparent;
  padding: 24px;
  color: var(--text-primary);
  position: relative;
  z-index: 1;
}

.modal-footer {
  border-top: 1px solid rgba(255, 255, 255, 0.1);
  background: rgba(255, 255, 255, 0.03);
  backdrop-filter: blur(20px) saturate(180%);
  -webkit-backdrop-filter: blur(20px) saturate(180%);
  padding: 16px 24px;
  border-radius: 0 0 24px 24px;
  position: relative;
  z-index: 1;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  gap: 12px;
}

/* Modal buttons - frosted glass design */
.modal-content .btn,
.modal-footer .btn,
.modal-body .btn {
  background: rgba(59, 130, 246, 0.15) !important;
  backdrop-filter: blur(var(--blur-medium)) !important;
  -webkit-backdrop-filter: blur(var(--blur-medium)) !important;
  border: 1px solid rgba(59, 130, 246, 0.25) !important;
  box-shadow: var(--shadow-sm) !important;
  color: #3b82f6 !important;
  font-weight: 600;
  transition: all var(--transition-fast) ease;
}

.modal-content .btn:hover,
.modal-footer .btn:hover,
.modal-body .btn:hover {
  background: rgba(59, 130, 246, 0.25) !important;
  border-color: rgba(59, 130, 246, 0.35) !important;
  box-shadow: var(--shadow-md) !important;
  transform: translateY(-2px);
}

/* Outline button variants in modals */
.modal-content .btn-outline-primary,
.modal-footer .btn-outline-primary,
.modal-body .btn-outline-primary {
  background: rgba(59, 130, 246, 0.05) !important;
  backdrop-filter: blur(var(--blur-medium)) !important;
  -webkit-backdrop-filter: blur(var(--blur-medium)) !important;
  border: 2px solid rgba(59, 130, 246, 0.35) !important;
  color: #3b82f6 !important;
}

.modal-content .btn-outline-primary:hover,
.modal-footer .btn-outline-primary:hover,
.modal-body .btn-outline-primary:hover {
  background: rgba(59, 130, 246, 0.15) !important;
  border-color: rgba(59, 130, 246, 0.5) !important;
}

.modal-content .btn-outline-secondary,
.modal-footer .btn-outline-secondary,
.modal-body .btn-outline-secondary {
  background: rgba(148, 163, 184, 0.05) !important;
  backdrop-filter: blur(var(--blur-medium)) !important;
  -webkit-backdrop-filter: blur(var(--blur-medium)) !important;
  border: 2px solid rgba(148, 163, 184, 0.35) !important;
  color: #64748b !important;
}

.modal-content .btn-outline-secondary:hover,
.modal-footer .btn-outline-secondary:hover,
.modal-body .btn-outline-secondary:hover {
  background: rgba(148, 163, 184, 0.15) !important;
  border-color: rgba(148, 163, 184, 0.5) !important;
}

.modal-content .btn-primary,
.modal-footer .btn-primary,
.modal-body .btn-primary {
  background: rgba(59, 130, 246, 0.2) !important;
  backdrop-filter: blur(var(--blur-medium)) !important;
  -webkit-backdrop-filter: blur(var(--blur-medium)) !important;
  border: 1px solid rgba(59, 130, 246, 0.3) !important;
  box-shadow: var(--shadow-sm) !important;
  color: #3b82f6 !important;
}

.modal-content .btn-primary:hover,
.modal-footer .btn-primary:hover,
.modal-body .btn-primary:hover {
  background: rgba(59, 130, 246, 0.3) !important;
  border-color: rgba(59, 130, 246, 0.4) !important;
  box-shadow: var(--shadow-md) !important;
  transform: translateY(-2px);
}

.modal-content .btn-secondary,
.modal-footer .btn-secondary,
.modal-body .btn-secondary {
  background: rgba(148, 163, 184, 0.2) !important;
  backdrop-filter: blur(var(--blur-medium)) !important;
  -webkit-backdrop-filter: blur(var(--blur-medium)) !important;
  border: 1px solid rgba(148, 163, 184, 0.35) !important;
  box-shadow: var(--shadow-sm) !important;
  color: #475569 !important;
  font-weight: 600;
}

.modal-content .btn-secondary:hover,
.modal-footer .btn-secondary:hover,
.modal-body .btn-secondary:hover {
  background: rgba(148, 163, 184, 0.3) !important;
  border-color: rgba(148, 163, 184, 0.45) !important;
  box-shadow: var(--shadow-md) !important;
  transform: translateY(-2px);
}

.modal-content .btn-success,
.modal-footer .btn-success,
.modal-body .btn-success {
  background: rgba(16, 185, 129, 0.2) !important;
  backdrop-filter: blur(var(--blur-medium)) !important;
  -webkit-backdrop-filter: blur(var(--blur-medium)) !important;
  border: 1px solid rgba(16, 185, 129, 0.35) !important;
  box-shadow: var(--shadow-sm) !important;
  color: #059669 !important;
  font-weight: 600;
}

.modal-content .btn-success:hover,
.modal-footer .btn-success:hover,
.modal-body .btn-success:hover {
  background: rgba(16, 185, 129, 0.3) !important;
  border-color: rgba(16, 185, 129, 0.45) !important;
  box-shadow: var(--shadow-md) !important;
  transform: translateY(-2px);
}

.modal-content .btn-danger,
.modal-footer .btn-danger,
.modal-body .btn-danger {
  background: rgba(239, 68, 68, 0.2) !important;
  backdrop-filter: blur(var(--blur-medium)) !important;
  -webkit-backdrop-filter: blur(var(--blur-medium)) !important;
  border: 1px solid rgba(239, 68, 68, 0.35) !important;
  box-shadow: var(--shadow-sm) !important;
  color: #dc2626 !important;
  font-weight: 600;
}

.modal-content .btn-danger:hover,
.modal-footer .btn-danger:hover,
.modal-body .btn-danger:hover {
  background: rgba(239, 68, 68, 0.3) !important;
  border-color: rgba(239, 68, 68, 0.45) !important;
  box-shadow: var(--shadow-md) !important;
  transform: translateY(-2px);
}

.btn-close {
  background: transparent
    url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 16 16' fill='%23ef4444'%3e%3cpath d='M.293.293a1 1 0 011.414 0L8 6.586 14.293.293a1 1 0 111.414 1.414L9.414 8l6.293 6.293a1 1 0 01-1.414 1.414L8 9.414l-6.293 6.293a1 1 0 01-1.414-1.414L6.586 8 .293 1.707a1 1 0 010-1.414z'/%3e%3c/svg%3e")
    center/1em auto no-repeat;
  opacity: 1;
  transition: all var(--transition-base) ease;
}

.btn-close:hover {
  transform: rotate(90deg) scale(1.2);
}

/* ============================================================================
 * ENHANCED NAVBAR
 * ============================================================================ */

.navbar {
  background: var(--glass-bg-light);
  backdrop-filter: blur(var(--blur-heavy)) saturate(180%);
  -webkit-backdrop-filter: blur(var(--blur-heavy)) saturate(180%);
  border-bottom: 1px solid var(--glass-border-light);
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.03);
}

.navbar-brand {
  color: var(--text-primary);
  font-weight: 700;
  font-size: 1.3rem;
  transition: all var(--transition-base) ease;
}

.navbar-brand:hover {
  transform: scale(1.05);
  color: var(--accent-color);
}

.navbar-nav .nav-link {
  color: var(--text-secondary);
  transition: all var(--transition-base) ease;
  position: relative;
  padding: 8px 16px;
}

.navbar-nav .nav-link::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 50%;
  width: 0;
  height: 2px;
  background: var(--gradient-accent);
  transition: all var(--transition-base) ease;
  transform: translateX(-50%);
}

.navbar-nav .nav-link:hover {
  color: var(--accent-color);
}

.navbar-nav .nav-link:hover::after {
  width: 80%;
}

.navbar-nav .nav-link.active {
  color: var(--accent-color);
  font-weight: 600;
}

.navbar-nav .nav-link.active::after {
  width: 80%;
}

/* ============================================================================
 * CUSTOM SCROLLBAR
 * ============================================================================ */

.custom-scrollbar::-webkit-scrollbar {
  width: 12px;
  height: 12px;
}

.custom-scrollbar::-webkit-scrollbar-track {
  background: var(--bg-tertiary);
  border-radius: 6px;
}

.custom-scrollbar::-webkit-scrollbar-thumb {
  background: var(--gradient-accent);
  border-radius: 6px;
  transition: all var(--transition-base) ease;
}

.custom-scrollbar::-webkit-scrollbar-thumb:hover {
  background: var(--gradient-primary);
  box-shadow: 0 0 12px var(--accent-glow);
}

/* ============================================================================
 * FLOATING THEME TOGGLE BUTTON
 * ============================================================================ */

.theme-toggle {
  position: fixed;
  bottom: 24px;
  right: 24px;
  width: 64px;
  height: 64px;
  border-radius: 50%;
  background: var(--gradient-accent);
  color: white;
  border: none;
  box-shadow: 0 8px 24px rgba(59, 130, 246, 0.4), 0 0 0 4px var(--bg-primary),
    0 0 0 8px rgba(59, 130, 246, 0.2);
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 1.8rem;
  transition: all var(--transition-base) cubic-bezier(0.4, 0, 0.2, 1);
  z-index: 1000;
  animation: themeToggleFloat 3s ease-in-out infinite;
}

@keyframes themeToggleFloat {
  0%,
  100% {
    transform: translateY(0) rotate(0deg);
  }
  50% {
    transform: translateY(-8px) rotate(180deg);
  }
}

.theme-toggle:hover {
  transform: scale(1.15) rotate(90deg);
  box-shadow: 0 12px 40px rgba(59, 130, 246, 0.6), 0 0 0 4px var(--bg-primary),
    0 0 0 8px rgba(59, 130, 246, 0.4);
}

.theme-toggle:active {
  transform: scale(1.05);
}

/* ============================================================================
 * UTILITY CLASSES
 * ============================================================================ */

/* text-gradient is now defined in the Logo Styling section */

.cyber-glow {
  animation: cyberGlow 2s ease-in-out infinite;
}

@keyframes cyberGlow {
  0%,
  100% {
    filter: drop-shadow(0 0 8px var(--accent-glow));
  }
  50% {
    filter: drop-shadow(0 0 16px var(--accent-glow));
  }
}

.fade-in {
  animation: fadeIn 0.6s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.slide-in-right {
  animation: slideInRight 0.5s ease;
}

@keyframes slideInRight {
  from {
    opacity: 0;
    transform: translateX(50px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

/* ============================================================================
 * LOADING STATES WITH SHIMMER
 * ============================================================================ */

.skeleton-loader {
  background: linear-gradient(
    90deg,
    var(--bg-tertiary) 25%,
    var(--bg-secondary) 50%,
    var(--bg-tertiary) 75%
  );
  background-size: 200% 100%;
  animation: shimmer 2s infinite;
  border-radius: 8px;
}

@keyframes shimmer {
  0% {
    background-position: 200% 0;
  }
  100% {
    background-position: -200% 0;
  }
}

.pulse-animation {
  animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
}

@keyframes pulse {
  0%,
  100% {
    opacity: 1;
    transform: scale(1);
  }
  50% {
    opacity: 0.7;
    transform: scale(1.05);
  }
}

/* ============================================================================
 * RESPONSIVE DESIGN
 * ============================================================================ */

@media (max-width: 768px) {
  .dashboard-title {
    font-size: 2rem;
  }

  .subtitle {
    font-size: 1rem;
  }

  .card-body {
    padding: 16px;
  }

  .metric-value {
    font-size: 1.5rem;
  }

  .theme-toggle {
    width: 56px;
    height: 56px;
    font-size: 1.5rem;
    bottom: 20px;
    right: 20px;
  }
}

@media (max-width: 576px) {
  .dashboard-title {
    font-size: 1.75rem;
  }

  .header-row {
    padding: 16px;
  }

  .card-body {
    padding: 12px;
  }
}

/* ============================================================================
 * ACCESSIBILITY
 * ============================================================================ */

@media (prefers-reduced-motion: reduce) {
  *,
  *::before,
  *::after {
    animation-duration: 0.01ms !important;
    animation-iteration-count: 1 !important;
    transition-duration: 0.01ms !important;
  }
}

:focus-visible {
  outline: 3px solid var(--accent-color);
  outline-offset: 3px;
  border-radius: 4px;
}

/* ============================================================================
 * NOTIFICATION DRAWER GLASS STYLING
 * ============================================================================ */

.offcanvas.notification-drawer-custom {
  background: var(--glass-bg-medium) !important;
  backdrop-filter: blur(var(--blur-heavy)) saturate(200%) brightness(1.1) !important;
  -webkit-backdrop-filter: blur(var(--blur-heavy)) saturate(200%)
