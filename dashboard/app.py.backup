                WHERE severity IN ('critical', 'high')
            )
        ''')
        count = cursor.rowcount
        conn.commit()

        toast = ToastManager.error(
            "Bulk Block Complete",
            detail_message="Bulk Block Complete"
        )
        return toast

    except Exception as e:
        logger.error(f"Error blocking suspicious: {e}")
        toast = ToastManager.error(
            "Error",
            detail_message="Error"
        )
        return toast


