                                html.Div([
                                    dbc.Badge(alert['severity'].upper(), color=severity_color, className="me-2"),
                                    html.Span(alert['device_ip'], className="fw-bold"),
                                    html.Small(f" ‚Ä¢ {alert['timestamp'][:16]}", className="text-muted ms-2")
