            icon_class = {
                'critical': 'fa-exclamation-circle',
                'high': 'fa-exclamation-triangle',
                'medium': 'fa-info-circle',
                'low': 'fa-check-circle'
            }.get(alert['severity'], 'fa-bell')

            action_cards.append(
                dbc.Card([
                    dbc.CardBody([
                        dbc.Row([
                            dbc.Col([
                                html.I(className=f"fa {icon_class} fa-2x text-{severity_color}")
