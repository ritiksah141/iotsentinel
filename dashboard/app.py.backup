        ], md=3),
        dbc.Col([
            dbc.Card([
                dbc.CardBody([
                    html.Div([
                        html.I(className="fa fa-times-circle fa-2x text-danger mb-2")
                    ]),
                    html.H3(str(failed_est), className="mb-1"),
