            dbc.Col([
                dbc.Card([
                    dbc.CardHeader([
                        html.I(className="fa fa-chart-pie me-2"),
                        "Protocol Distribution"
                    ], className="glass-card-header"),
                    dbc.CardBody([
                        html.Div(protocol_items) if protocol_items else html.P("No protocol data available.", className="text-muted")
